<PrimeiroScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
            size: self.size
            source: 'laranja.jpg'
	StackLayout:
		orientation: 'tb-lr'
		#size_hint: (1,.1)
		GridLayout:
			cols: 1
			padding: 0, 0
			spacing: 0, 10
			size_hint: (1,1)
			Label:
				text: "Pizzoide App!"
				font_size: '26dp'
				italic: True
				bold: True
			Button:
				text: "Cardápio!"
				font_size: '20dp'
				background_normal: '1.png'
				background_down: '2.png'
				bold: True
				on_release: root.manager.current = 'dois'
				
			Button:
				text: "Promoção do dia!"
				font_size: '20dp'
				background_normal: '2.png'
				background_down: '1.png'	
				bold: True
				on_release: root.dia()
			Button:
				text: "Monte sua pizza!"
				font_size: '20dp'
				background_normal: '1.png'
				background_down: '2.png'
				bold: True
					
			Button:
				text: "Reclamações"
				font_size: '20dp'	
				background_normal: '2.png'
				background_down: '1.png'
				bold: True
	StackLayout:
		orientation: 'tb-lr'
		BoxLayout:
			size_hint:(.25,.25)
			Button:
				#text: "Carrinho"
				background_normal: 'cart.png'#mozi vai criar um fundo circular para esta imagem
				background_down: 'cart.png'
				on_press: root.manager.current = 'carrinho'


<SegundoScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
            size: self.size
            source: 'laranja.jpg'
	StackLayout:
		orientation: 'tb-lr'
		GridLayout:
			cols: 1
			size_hint: (1, .1)
			Label:
				text: "Escolha a sua pizza!"
				font_size: '36dp'
	StackLayout:
		orientation: 'tb-lr'
		ScrollView:
			size_hint: (1, .9)
			pos_hint:{'x': .0, 'y': .0}
			GridLayout:
				cols: 2
				padding: 45, 50
				spacing: 25, 50
				size_hint: (1, 1)
